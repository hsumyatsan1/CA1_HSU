<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order History - Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background:#f6f7fb; }
    .history-card { background:#fff; border-radius:12px; box-shadow:0 10px 24px rgba(0,0,0,0.08); }
    .section-title { font-weight:700; }
    .item-row { display:flex; justify-content:space-between; gap:12px; padding:6px 0; border-bottom:1px solid #eee; }
    .item-row:last-child { border-bottom:none; }
    .muted { color:#6c757d; }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
  <div class="container">
    <a class="navbar-brand" href="/">Supermarket</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
        <li class="nav-item"><a class="nav-link" href="/payment">Payment</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Log out</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container py-4">
  <h2 class="mb-3">Order and Payment History</h2>

  <div class="row g-3">
    <div class="col-lg-7">
      <div class="history-card p-3">
        <div class="section-title mb-2">Order Summary</div>
        <% if (orderHistory && orderHistory.length) { %>
          <% orderHistory.forEach(order => { %>
            <div class="border rounded p-3 mb-3">
              <div class="d-flex justify-content-between mb-2">
                <div>
                  <strong>Order</strong>
                  <div class="muted"><%= order.createdAt ? new Date(order.createdAt).toLocaleString() : '' %></div>
                </div>
                <div class="text-end">
                  <div class="muted">Payment ID</div>
                  <div><%= order.paymentId || 'N/A' %></div>
                </div>
              </div>
              <% const items = order.items || []; %>
              <% if (items.length) { %>
                <% items.forEach(it => { %>
                  <div class="item-row">
                    <div>
                      <div><strong><%= it.productName %></strong></div>
                      <small class="muted">Qty: <%= it.qty %> x $<%= parseFloat(it.price||0).toFixed(2) %></small>
                    </div>
                    <div>$<%= (parseFloat(it.price||0) * parseInt(it.qty||1, 10)).toFixed(2) %></div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="muted">No items available</div>
              <% } %>
              <div class="d-flex justify-content-between mt-2">
                <strong>Total</strong>
                <strong>$<%= parseFloat(order.total||0).toFixed(2) %></strong>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="muted">No order history yet.</div>
        <% } %>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="history-card p-3">
        <div class="section-title mb-2">Payment Summary</div>
        <% if (payments && payments.length) { %>
          <div class="table-responsive">
            <table class="table table-sm align-middle">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Total</th>
                  <th>Status</th>
                  <th>Date</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% payments.forEach(p => { %>
                  <tr>
                    <td><%= p.id %></td>
                    <td>$<%= parseFloat(p.total||0).toFixed(2) %></td>
                    <td><%= p.status || 'N/A' %></td>
                    <td><%= p.created_at ? new Date(p.created_at).toLocaleDateString() : '' %></td>
                    <td><a href="/receipt/<%= p.id %>" class="btn btn-outline-secondary btn-sm">Receipt</a></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="muted">No payment history yet.</div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
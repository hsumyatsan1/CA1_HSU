<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket</a>
    <ul class="navbar-nav ms-auto">
      <% if (user && user.role === 'admin') { %>
        <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
      <% } %>
      <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
      <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
    </ul>
  </div>
</nav>

<div class="container mt-4">
  <h2 class="mb-4">Products</h2>
  <div class="row">
    <% products.forEach(product => { %>
      <div class="col-md-3 mb-3">
        <div class="card h-100">
          <img src="/images/<%= product.image %>" class="card-img-top" style="height:150px; object-fit:cover;">
          <div class="card-body">
            <h5 class="card-title"><%= product.productName %></h5>
            <p class="card-text">Price: $<%= parseFloat(product.price).toFixed(2) %></p>
            <p class="card-text">In stock: <%= product.quantity %></p>
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-flex">
              <input type="number" name="qty" class="form-control me-2" min="1" value="1" style="width:90px;"
                     max="<%= product.quantity %>" <%= (product.quantity <= 0) ? 'disabled' : '' %> required>
              <button class="btn btn-primary" <%= (product.quantity <= 0) ? 'disabled' : '' %>>Buy</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
</body>
</html>

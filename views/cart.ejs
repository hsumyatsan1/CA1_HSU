<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Cart - Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
  <div class="container">
    <a class="navbar-brand" href="/">ðŸ›’ Supermarket</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Log out</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <% if (messages && messages.length) { %>
    <div class="alert alert-info"><%= messages.join('<br>') %></div>
  <% } %>

  <h2>Your Cart</h2>
  <% if (cart && cart.length) { %>
    <div class="table-responsive">
      <table class="table">
        <thead class="table-dark"><tr><th>Image</th><th>Product</th><th>Price</th><th>Qty</th><th>Total</th><th></th></tr></thead>
        <tbody>
          <% cart.forEach(i=>{ %>
            <tr>
              <td>
                <% if (i.image) { %><img src="<%= i.image %>" style="height:50px"><% } %>
              </td>
              <td><%= i.productName %></td>
              <td>$<%= parseFloat(i.price||0).toFixed(2) %></td>
              <td>
                <form action="/cart/update/<%= i.productId %>" method="POST" class="d-flex gap-2">
                  <input name="qty" type="number" min="1" value="<%= i.qty %>" class="form-control form-control-sm" style="width:80px">
                  <button class="btn btn-warning btn-sm">Update</button>
                </form>
              </td>
              <td>$<%= parseFloat((i.price||0) * (i.qty||1)).toFixed(2) %></td>
              <td>
                <form action="/cart/remove/<%= i.productId %>" method="POST">
                  <button class="btn btn-danger btn-sm" onclick="return confirm('Remove?')">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="mt-3">
      <h4>Total: $<%= parseFloat(total||0).toFixed(2) %></h4>
      <a class="btn btn-secondary" href="/shopping">Continue shopping</a>
      <a class="btn btn-success" href="/payment">Confirm & Pay</a>
    </div>
  <% } else { %>
    <div class="alert alert-info">Cart is empty. <a href="/shopping">Shop now</a></div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment - Supermarket</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <style>
    .payment-container { max-width: 600px; margin: 40px auto; padding: 20px; }
    .payment-methods { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; margin: 30px 0; }
    .payment-option {
      border: 2px solid #ddd;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s;
    }
    .payment-option:hover { border-color: #007bff; background: #f0f7ff; }
    .payment-option input { display: none; }
    .payment-option input:checked + label { color: #007bff; font-weight: bold; }
    .payment-option label { cursor: pointer; display: block; font-size: 18px; margin: 10px 0; }
    .icon { font-size: 32px; margin: 10px 0; }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">üõí Supermarket</a>
    <ul class="navbar-nav ms-auto">
      <li class="nav-item"><a class="nav-link" href="/cart">Back to Cart</a></li>
      <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
    </ul>
  </div>
</nav>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h3>Order Summary</h3>
      
      <% if (messages && messages.error && messages.error.length) { %>
        <div class="alert alert-danger">
          <% messages.error.forEach(msg => { %>
            <p><%= msg %></p>
          <% }); %>
        </div>
      <% } %>
      <% if (messages && messages.success && messages.success.length) { %>
        <div class="alert alert-success">
          <% messages.success.forEach(msg => { %>
            <p><%= msg %></p>
          <% }); %>
        </div>
      <% } %>

      <% if (cart && cart.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% cart.forEach(item => { %>
                <tr>
                  <td><%= item.name %></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                  <td>$<%= parseFloat(item.itemTotal).toFixed(2) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="card mt-3">
          <div class="card-body">
            <h5>Total Amount: <span class="text-success">$<%= parseFloat(total).toFixed(2) %></span></h5>
          </div>
        </div>
      <% } else { %>
        <div class="alert alert-warning">Your cart is empty</div>
      <% } %>
    </div>

    <div class="col-md-6">
      <h3>Select Payment Method</h3>
      <div class="payment-container">
        <p style="text-align: center; font-size: 18px; font-weight: bold;">Total: <span class="text-success">$<%= total %></span></p>

        <form method="POST" action="/payment" id="paymentForm">
          <div class="payment-methods">
            <!-- Credit Card -->
            <div class="payment-option">
              <input type="radio" id="credit-card" name="paymentMethod" value="credit-card">
              <label for="credit-card">
                <div class="icon">üí≥</div>
                Credit Card
              </label>
            </div>

            <!-- PayPal -->
            <div class="payment-option">
              <input type="radio" id="paypal" name="paymentMethod" value="paypal">
              <label for="paypal">
                <div class="icon">üÖøÔ∏è</div>
                PayPal
              </label>
            </div>

            <!-- QR Code (NETS) -->
            <div class="payment-option">
              <input type="radio" id="qr-code" name="paymentMethod" value="qr-code">
              <label for="qr-code">
                <div class="icon">üì±</div>
                QR Code
              </label>
            </div>
          </div>

          <div style="text-align: center; margin-top: 30px;">
            <button type="submit" class="btn btn-primary" style="padding: 10px 40px; font-size: 16px;">
              Continue
            </button>
            <a href="/cart" class="btn btn-secondary" style="padding: 10px 40px; font-size: 16px; margin-left: 10px;">
              Back to Cart
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.getElementById('paymentForm').addEventListener('submit', function(e) {
    const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked');
    
    if (!selectedMethod) {
      e.preventDefault();
      alert('Please select a payment method');
      return false;
    }
    return true;
  });
</script>

</body>
</html>

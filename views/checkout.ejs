<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/theme.css" rel="stylesheet">
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket</a>
  </div>
</nav>

<div class="container mt-4 text-center">
  <h2>Order Completed! </h2>
  <p class="mt-3">Thank you for your purchase!</p>

  <h4 class="mt-4">Order Details:</h4>
  <ul class="list-group mt-3">
    <% if (order && order.length) { %>
      <% order.forEach(item => { %>
        <li class="list-group-item">
          <%= item.productName %> — Qty: <%= item.qty %> — $<%= (parseFloat(item.price) * parseInt(item.qty,10)).toFixed(2) %>
        </li>
      <% }) %>
    <% } else { %>
      <li class="list-group-item">No order data available.</li>
    <% } %>
  </ul>

  <a href="/shopping" class="btn btn-primary mt-4">Continue Shopping</a>
</div>

</body>
</html>
